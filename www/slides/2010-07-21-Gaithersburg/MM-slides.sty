\newcommand{\Vs}{\ \ \ensuremath{\longleftrightarrow}\ \ }% <-->
\newcommand{\nlQ}{\\ \Emm}%-- New line and Indent
\newcommand{\nlQeng}{\\[-1ex] \Emm}%-- \Nlin ``eng''

\newcommand{\nlALSO}{\nlQ \ALSO}
\newcommand{\nlAlso}{\nlQ \Also}

\newcommand{\qqquad}{\qquad\qquad}
\newcommand{\qqqquad}{\qqquad\qqquad}

\newcommand{\MidLine}{\par\noindent\centerline{\rule{.6\textwidth}{0.3mm}}\par}

