%%% Useful abbreviations for slides in English / German
%%% Both for 'seminar' and 'beamer' ....

\newcommand{\headingCmd}[2]{%
  \begin{center} \large\bf #1{#2}%
  \end{center}
  \vspace{1ex minus 1ex}}
% use this one here:
\newcommand{\heading}[1]{\headingCmd{\shadowbox}{#1}}
\newcommand{\headM}[1]{\headingCmd{\fbox}{#1}}
\newcommand{\headline}[1]{\headingCmd{\ }{#1}}

\newcommand{\Em}{\hspace*{1em}}
\newcommand{\Emm}{\hspace*{2em}}

%-- Small title :
\newcommand{\BF}[1]{\textbf{#1:}\Em\ignorespaces}
%%-- should define this as \emph for text  (and FIX the FONT-LOCKING!)
\newcommand{\U}[1]{\underline{#1}}%% 'emphasize' für Folien
\newcommand{\Ul}[1]{\underline{#1}}%% = underline für Skript UND Folien

